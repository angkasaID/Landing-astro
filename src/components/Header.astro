---
// src/components/Header.astro (FINAL UTUH: Active State, Size Chart, Image Gallery, + Category Sidebar)

const currentPath = Astro.url.pathname.trim();
const isHomePage = currentPath === '/' || currentPath === '/index.html';

// 1. Tentukan kelas background/shadow
const solidHeaderClasses = 'bg-white shadow-md';
const transparentHeaderClasses = 'bg-transparent shadow-none';

const headerClasses = isHomePage ? transparentHeaderClasses : solidHeaderClasses;

// 2. Tentukan warna teks & logo: Default (Non-homepage) = Hitam, Homepage = Putih
const initialTextColor = isHomePage ? 'text-white' : 'text-gray-900';
const initialLogoSrc = isHomePage
  ? '/asset/images/logo-web.png'
  : '/asset/images/logo-web-dark.png';
---

<header
  id="main-header"
  data-is-home={isHomePage}
  class={`header-transition fixed top-0 left-0 right-0 z-50 ${headerClasses}`}
>
  <div
    id="search-overlay"
    class="fixed inset-0 z-[100] flex hidden items-start justify-center bg-gray-500/70 pt-24 opacity-0 backdrop-blur-sm transition-opacity duration-300"
  >
    <div class="w-full max-w-4xl px-4">
      <div class="flex h-14 items-center rounded-full bg-white p-2 shadow-2xl">
        <i class="fa-solid fa-magnifying-glass mx-3 text-xl text-gray-500"></i>

        <input
          id="mobile-search-input"
          type="search"
          placeholder="Cari Layanan atau Topik Bantuan (Contoh: Transkripsi, Closed Captioning)"
          class="h-full w-full border-0 bg-transparent pr-4 text-lg text-gray-800 placeholder-gray-400 focus:ring-0"
        />

        <button
          id="close-search"
          class="ml-2 p-2 text-gray-500 transition duration-150 hover:text-lime-600"
          aria-label="Tutup Pencarian"
        >
          <i class="fa-solid fa-xmark text-2xl"></i>
        </button>
      </div>
    </div>
  </div>

  <div class="mx-auto px-4 md:px-20 lg:px-40">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center space-x-8">
        <div class="flex-shrink-0">
          <a href="/" class="logo-transition flex items-center">
            <img
              src={initialLogoSrc}
              alt="Aethersub Logo Premium"
              class="h-10 w-auto md:h-12"
              id="header-logo"
            />
          </a>
        </div>

        <nav class="hidden items-center space-x-6 md:flex" id="desktop-nav">
          <a
            href="/produk"
            class={`nav-link text-sm font-medium ${initialTextColor} nav-link-animated transition duration-150`}
            >PRODUCT</a
          >
          <a
            href="/about"
            class={`nav-link text-sm font-medium ${initialTextColor} nav-link-animated transition duration-150`}
            >ABOUT</a
          >
        </nav>
      </div>

      <div class="flex items-center space-x-2 md:space-x-4">
        <div id="desktop-search-group" class="flex items-center">
          <input
            id="desktop-search-input"
            type="search"
            placeholder="Cari Produk atau Bantuan..."
            class={`hidden md:block transition-all duration-300 ease-in-out h-8 
                     border border-gray-400 rounded-full px-4
                     bg-transparent ${initialTextColor} ${initialTextColor.replace('text-', 'placeholder-')} focus:outline-none focus:border-red-500 text-sm 
                     w-0 opacity-0`}
          />

          <button
            class={`py-2 px-0 ${initialTextColor} hover:text-lime-600 transition duration-150`}
            id="open-search"
            data-search-state="closed"
          >
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </div>

        {/* CONTAINER ICON KERANJANG - FIX untuk perubahan warna scroll ada di header-logic.js */}
        <button
          class={`py-2 px-1 ${initialTextColor} hover:text-lime-600 relative transition duration-150`}
          id="cart-icon-container"
          onclick="window.location.href='/cart'"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 4a2 2 0 11-4 0 2 2 0 014 0z"
            ></path>
          </svg>
          <span
            id="cart-count"
            class="absolute top-0 right-0 inline-flex translate-x-1/2 -translate-y-1/2 transform items-center justify-center rounded-full bg-red-600 px-2 py-1 text-xs leading-none font-bold text-red-100"
            >0</span
          >
        </button>

        <button
          class={`md:hidden py-2 px-0 ${initialTextColor} hover:text-lime-600`}
          id="mobile-menu-icon"
          onclick="openMobileMenu()"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>
<div
  id="custom-toast"
  class="fixed top-5 right-0 left-0 z-[150] flex hidden justify-center px-4 opacity-0 transition-all duration-500"
>
  <div
    class="flex w-full max-w-sm items-center space-x-3 rounded-xl bg-lime-600 p-4 text-white shadow-lg ring-1 ring-lime-700/50 md:max-w-lg"
  >
    <svg class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <span id="toast-message" class="text-sm font-semibold"></span>
  </div>
</div>

{/* ======================= 2. PRODUCT DETAIL MODAL ======================= */}
<div
  id="product-detail-modal"
  class="fixed inset-0 z-[110] flex hidden items-center justify-center p-4"
  aria-modal="true"
  role="dialog"
>
  <div class="absolute inset-0 bg-gray-900/80" id="product-detail-backdrop"></div>
  <div
    class="z-10 max-h-[95vh] w-full max-w-4xl transform overflow-y-auto rounded-xl bg-white shadow-2xl transition-all duration-300"
  >
    <div class="sticky top-0 z-20 flex items-center justify-between border-b bg-white p-6">
      <h3 id="modal-product-name-header" class="truncate text-xl font-bold text-gray-900">
        Pilih Opsi Produk
      </h3>
      <button
        id="product-detail-close-button"
        class="p-1 text-gray-500 transition duration-150 hover:text-lime-600"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <div class="grid grid-cols-1 gap-6 p-6 md:grid-cols-2">
      <div>
        <div
          id="modal-product-image-main"
          class="mb-4 aspect-square w-full overflow-hidden rounded-lg border-2 border-gray-100 bg-gray-200 bg-cover bg-center shadow-md transition-all duration-300"
          style="background-image: url('/asset/images/item-placeholder-1.jpg');"
        >
        </div>

        <div id="modal-image-thumbnails" class="flex gap-2 overflow-x-auto pb-2">
          <div
            class="thumbnail-item h-16 w-16 cursor-pointer rounded-md border-2 border-red-600 object-cover opacity-100 transition duration-200"
          >
          </div>
        </div>

        <h4 id="modal-product-name" class="mt-4 text-2xl font-extrabold text-gray-900"></h4>
        <p id="modal-product-price" class="mt-1 mb-4 text-3xl font-bold text-lime-600"></p>
        <p class="text-sm text-gray-600">
          Jersey kualitas premium dengan garansi kustom nama dan nomor gratis. Bahan Dri-FIT
          teknologi terbaru.
        </p>
      </div>

      <div class="space-y-6">
        <div class="border-b pb-4">
          <label
            class="mb-2 block flex items-center justify-between text-lg font-semibold text-gray-800"
            >Ukuran Tersedia
            <button
              id="toggle-size-chart"
              onclick="toggleSizeChart()"
              class="text-sm font-medium text-lime-600 transition duration-150 hover:text-red-800"
            >
              <i class="fa-solid fa-chart-bar mr-1"></i> Lihat Size Chart
            </button>
          </label>

          <div class="flex flex-wrap gap-2">
            <input type="radio" id="sizeXS" name="size" value="XS" class="hidden" /><label
              for="sizeXS"
              class="cursor-pointer rounded-full border px-3 py-1 text-sm hover:border-red-500 hover:bg-red-50"
            >
              XS</label
            >
            <input type="radio" id="sizeS" name="size" value="S" class="hidden" required /><label
              for="sizeS"
              class="cursor-pointer rounded-full border px-3 py-1 text-sm hover:border-red-500 hover:bg-red-50"
            >
              S</label
            >
            <input type="radio" id="sizeM" name="size" value="M" class="hidden" /><label
              for="sizeM"
              class="cursor-pointer rounded-full border px-3 py-1 text-sm hover:border-red-500 hover:bg-red-50"
            >
              M</label
            >
            <input type="radio" id="sizeL" name="size" value="L" class="hidden" checked /><label
              for="sizeL"
              class="cursor-pointer rounded-full border px-3 py-1 text-sm hover:border-red-500 hover:bg-red-50"
            >
              L</label
            >
            <input type="radio" id="sizeXL" name="size" value="XL" class="hidden" /><label
              for="sizeXL"
              class="cursor-pointer rounded-full border px-3 py-1 text-sm hover:border-red-500 hover:bg-red-50"
            >
              XL</label
            >
            <input type="radio" id="size2XL" name="size" value="2XL" class="hidden" /><label
              for="size2XL"
              class="cursor-pointer rounded-full border px-3 py-1 text-sm hover:border-red-500 hover:bg-red-50"
            >
              2XL</label
            >
          </div>
        </div>

        <div
          id="size-chart-content"
          class="rounded-lg border bg-gray-50 p-3 transition-all duration-300"
        >
          <h5 class="mb-2 text-base font-bold text-gray-900">Size Chart (Lebar Dada x Panjang)</h5>
          <table class="w-full text-sm text-gray-700">
            <thead>
              <tr class="border-b text-left font-semibold text-gray-600">
                <th class="py-1">Ukuran</th>
                <th class="py-1">Lebar (cm)</th>
                <th class="py-1">Panjang (cm)</th>
              </tr>
            </thead>
            <tbody>
              <tr><td class="py-1">XS</td><td class="py-1">46</td><td class="py-1">66</td></tr>
              <tr><td class="py-1">S</td><td class="py-1">48</td><td class="py-1">68</td></tr>
              <tr><td class="py-1">M</td><td class="py-1">50</td><td class="py-1">70</td></tr>
              <tr><td class="py-1">L</td><td class="py-1">52</td><td class="py-1">72</td></tr>
              <tr><td class="py-1">XL</td><td class="py-1">54</td><td class="py-1">74</td></tr>
              <tr><td class="py-1">2XL</td><td class="py-1">56</td><td class="py-1">76</td></tr>
            </tbody>
          </table>
        </div>

        <div
          id="quantity-discount-message"
          class="rounded-lg border border-red-200 bg-red-50 p-3 text-sm text-red-800"
        >
          <p class="mb-1 flex items-center font-bold">
            <svg class="mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m0 0l-1 1h4m-4-4h10a2 2 0 002-2V9a2 2 0 00-2-2h-2"
              ></path>
            </svg>
            HARGA GROSIR
          </p>
          <p>Dapatkan diskon **Rp 20.000** per item untuk pemesanan **di atas 10 pcs**.</p>
        </div>
      </div>
    </div>

    <div class="flex justify-end border-t bg-gray-50 p-6">
      <button
        id="add-to-cart-button"
        class="flex items-center rounded-lg bg-red-600 px-6 py-3 font-semibold text-white transition duration-150 hover:bg-red-700"
      >
        <svg class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 4a2 2 0 11-4 0 2 2 0 014 0z"
          ></path>
        </svg>
        Tambahkan ke Keranjang
      </button>
    </div>
  </div>
</div>

{/* ======================= 3. MOBILE MENU SIDEBAR ======================= */}
<div
  id="mobile-menu-overlay"
  class="fixed inset-0 z-40 hidden bg-gray-900/50 opacity-0 transition-opacity duration-300"
  onclick="closeMobileMenu()"
>
</div>

<div
  id="mobile-menu-sidebar"
  class="fixed top-4 right-0 z-50 h-full w-64 translate-x-full transform rounded-2xl bg-white p-6 shadow-2xl transition-transform duration-300"
>
  <div class="mb-8 flex items-center justify-between border-b pb-4">
    <span class="text-xl font-extrabold text-lime-600">MENU</span>
    <button
      onclick="closeMobileMenu()"
      class="rounded-full p-2 text-gray-500 transition duration-150 hover:text-lime-600"
      aria-label="Tutup Menu"
    >
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <nav class="space-y-1">
    <!-- MAIN MENU -->
    <a
      href="/produk"
      class={`block text-base font-semibold px-4 py-3 rounded-lg transition duration-150 ${
        currentPath.startsWith('/produk')
          ? 'bg-lime-600 text-white hover:bg-lime-700'
          : 'text-gray-800 hover:text-white hover:bg-lime-600'
      }`}
      onclick="closeMobileMenu()"
    >
      <i class="fa-solid fa-shirt mr-3 w-5"></i> PRODUCT
    </a>

    <a
      href="/about"
      class={`block text-base font-semibold px-4 py-3 rounded-lg transition duration-150 ${
        currentPath.startsWith('/about')
          ? 'bg-lime-600 text-white hover:bg-lime-700'
          : 'text-gray-800 hover:text-white hover:bg-lime-600'
      }`}
      onclick="closeMobileMenu()"
    >
      <i class="fa-solid fa-circle-info mr-3 w-5"></i> ABOUT
    </a>

    <div class="mt-4 border-t pt-4"></div>

    <!-- SUPPORT / HELPER LINKS -->
    <a
      href="/faq"
      class="block px-4 py-2 text-sm font-medium text-gray-700 transition duration-150 hover:text-lime-600"
      onclick="closeMobileMenu()"
    >
      <i class="fa-solid fa-circle-question mr-3 w-5"></i> FAQ & Bantuan
    </a>

    <a
      href="/contact"
      onclick="closeMobileMenu()"
      class="block px-4 py-2 text-sm font-medium text-gray-700 transition duration-150 hover:text-lime-600"
    >
      <i class="fa-solid fa-headset mr-3 w-5"></i> Kontak & Support
    </a>

    <a
      href="/privacy"
      onclick="closeMobileMenu()"
      class="block px-4 py-2 text-sm font-medium text-gray-700 transition duration-150 hover:text-lime-600"
    >
      <i class="fa-solid fa-shield-halved mr-3 w-5"></i> Privacy Policy
    </a>

    <a
      href="/syarat-ketentuan"
      onclick="closeMobileMenu()"
      class="block px-4 py-2 text-sm font-medium text-gray-700 transition duration-150 hover:text-lime-600"
    >
      <i class="fa-solid fa-scale-balanced mr-3 w-5"></i> Terms & Conditions
    </a>

    <div class="mt-4 border-t pt-4"></div>

    <!-- OPTIONAL VERSION INFO (bisa dihapus kalau tidak perlu) -->
    <p class="mt-6 px-4 text-xs text-gray-400">v1.0.0 â€¢ Last Update: Jan 2025</p>
  </nav>
</div>

{/* ======================= 4. CATEGORY SIDEBAR (TAMBAHAN FIX) ======================= */}
<div
  id="category-sidebar-overlay"
  class="fixed inset-0 z-40 hidden bg-gray-900/50 opacity-0 transition-opacity duration-300"
  onclick="closeCategorySidebar()"
>
</div>

<div
  id="category-sidebar"
  class="fixed top-0 left-0 z-50 h-full w-64 -translate-x-full transform bg-white p-6 shadow-2xl transition-transform duration-300"
>
  <div class="mb-8 flex items-center justify-between border-b pb-4">
    <span class="text-xl font-extrabold text-lime-600">KATEGORI</span>
    <button
      id="category-close-button"
      class="rounded-full p-2 text-gray-500 transition duration-150 hover:text-lime-600"
      aria-label="Tutup Sidebar Kategori"
    >
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <nav class="space-y-1">
    {/* Konten Kategori akan diisi di Produk.astro atau secara dinamis */}
    <a
      href="/produk"
      class="block rounded-lg px-4 py-3 text-base font-semibold text-gray-800 transition duration-150 hover:bg-lime-600 hover:text-white"
    >
      Semua Produk
    </a>
    <a
      href="/produk?cat=timnas"
      class="block px-4 py-2 text-sm font-medium text-gray-600 transition duration-150 hover:text-gray-900"
    >
      Jersey Timnas
    </a>
    <a
      href="/produk?cat=Training"
      class="block px-4 py-2 text-sm font-medium text-gray-600 transition duration-150 hover:text-gray-900"
    >
      Training
    </a>
    <a
      href="/produk?cat=retro"
      class="block px-4 py-2 text-sm font-medium text-gray-600 transition duration-150 hover:text-gray-900"
    >
      Jersey Retro
    </a>
  </nav>
</div>

<script type="module" src="/scripts/header-logic.js" is:inline></script>
