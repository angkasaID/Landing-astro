---
// src/pages/cart.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Keranjang - JersyKita">
  <main class="mx-auto mt-5 max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <h1 class="mb-8 border-b-2 border-red-600 pb-2 text-4xl font-extrabold text-gray-900">
      Keranjang Anda
    </h1>

    <div class="flex flex-col gap-8 md:flex-row">
      <div class="md:w-2/3">
        <div id="cart-items-container" class="space-y-6">
          <p id="loading-message" class="py-10 text-center text-gray-500">Memuat Keranjang...</p>
        </div>

        <div class="mt-8 border-t pt-4">
          <a href="/" class="flex items-center font-medium text-red-600 hover:text-red-800">
            <i class="fa-solid fa-arrow-left fa-sm mr-2"></i>
            Lanjutkan Belanja
          </a>
        </div>
      </div>

      <div class="sticky-top-20 sticky md:w-1/3">
        <div class="rounded-xl bg-white p-6 shadow-2xl">
          <h2 class="mb-4 border-b pb-2 text-2xl font-bold text-gray-900">Ringkasan Pesanan</h2>

          <div class="space-y-2 text-gray-700">
            <div class="flex justify-between">
              <span>Subtotal</span>
              <span id="subtotal-display">Rp 0</span>
            </div>
            <div class="flex justify-between">
              <span>Diskon Kupon</span>
              <span id="discount-display" class="text-green-600">Rp 0</span>
            </div>
            <div class="flex justify-between">
              <span>Pengiriman</span>
              <span id="shipping-display" class="font-medium text-green-600"
                >Gratis (Dibahas via WA)</span
              >
            </div>
          </div>

          <div class="mt-4 border-t pt-4">
            <div class="flex justify-between text-2xl font-extrabold text-gray-900">
              <span>Total Pembayaran</span>
              <span id="total-display" class="text-red-600">Rp 0</span>
            </div>
          </div>

          <div class="mt-6 space-y-4 border-t pt-4">
            <h3 class="text-lg font-bold text-gray-800">
              Data Penerima <span class="text-red-600">*</span>
            </h3>

            <div>
              <label for="orderer-name" class="mb-1 block text-sm font-medium text-gray-700"
                >Nama Lengkap</label
              >
              <input
                type="text"
                id="orderer-name"
                placeholder="Cth: Ahmad Fulan"
                class="w-full rounded-lg border-gray-300 p-2 text-sm focus:border-red-500 focus:ring-red-500"
                required
              />
            </div>

            <div>
              <label for="orderer-contact" class="mb-1 block text-sm font-medium text-gray-700"
                >Nomor WhatsApp/Kontak</label
              >
              <input
                type="tel"
                id="orderer-contact"
                placeholder="Cth: 081234567890"
                class="w-full rounded-lg border-gray-300 p-2 text-sm focus:border-red-500 focus:ring-red-500"
                required
              />
            </div>

            <div>
              <label for="shipping-address" class="mb-1 block text-sm font-medium text-gray-700"
                >Alamat Pengiriman Lengkap</label
              >
              <textarea
                id="shipping-address"
                rows="3"
                placeholder="Nama Jalan, Nomor Rumah, RT/RW, Kelurahan, Kecamatan, Kota/Kab, Kode Pos"
                class="w-full rounded-lg border-gray-300 p-2 text-sm focus:border-red-500 focus:ring-red-500"
                required></textarea>
            </div>
          </div>
          <button
            id="checkout-button"
            onclick="checkoutToWhatsapp()"
            class="mt-6 flex w-full items-center justify-center space-x-2 rounded-lg bg-green-500 px-4 py-3 font-semibold text-white shadow-lg transition duration-300 hover:bg-green-600 disabled:opacity-50"
            disabled
          >
            <i class="fa-brands fa-whatsapp fa-lg"></i>
            <span>Lanjut ke Pembayaran via WhatsApp</span>
          </button>
          <p id="empty-cart-text" class="mt-2 hidden text-center text-sm text-gray-500">
            Keranjang kosong, tambahkan produk terlebih dahulu.
          </p>

          <div class="mt-6 border-t pt-4">
            <label for="coupon" class="mb-2 block text-sm font-medium text-gray-700"
              >Kode Kupon:</label
            >
            <div class="flex space-x-2">
              <input
                type="text"
                id="coupon"
                placeholder="Masukkan kode kupon (Cth: DISKON20K)"
                class="flex-grow rounded-lg border-gray-300 p-2 focus:border-red-500 focus:ring-red-500"
              />
              <button
                id="apply-coupon-button"
                class="flex-shrink-0 rounded-lg bg-red-600 px-4 py-2 text-sm font-medium text-white transition duration-150 hover:bg-red-700"
              >
                Terapkan
              </button>
            </div>
            <p id="coupon-message" class="mt-2 hidden rounded-lg p-2 text-sm"></p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script type="module" src="/scripts/cart-logic.js" is:inline></script>
</BaseLayout>
