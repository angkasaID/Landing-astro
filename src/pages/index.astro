      </div>
    </div>
  </div>

  <section id="full-screen-carousel" class="relative w-full overflow-hidden bg-white">
    <div
      id="gallery-carousel"
      class="mt-1 flex h-full w-full snap-x snap-mandatory snap-always overflow-x-auto"
      style="scroll-behavior: smooth;"
    >
      <div
        class="carousel-item relative flex w-full flex-shrink-0 items-center justify-center"
        data-slide-index="1"
      >
        <img
          src="/asset/images/slide1.png"
          alt="Slide Carousel 1"
          class="h-auto w-full object-contain object-center"
        />
      </div>

      <div
        class="carousel-item relative flex w-full flex-shrink-0 items-center justify-center"
        data-slide-index="2"
      >
        <img
          src="/asset/images/slide2.png"
          alt="Slide Carousel 2"
          class="h-auto w-full object-contain object-center"
        />
      </div>

      <div
        class="carousel-item relative flex w-full flex-shrink-0 items-center justify-center"
        data-slide-index="3"
      >
        <img
          src="/asset/images/slide3.png"
          alt="Slide Carousel 3"
          class="h-auto w-full object-contain object-center"
        />
      </div>

      <div
        class="carousel-item relative flex w-full flex-shrink-0 items-center justify-center"
        data-slide-index="1-copy"
      >
        <img
          src="/asset/images/slide1.png"
          alt="Slide Carousel 1 Copy"
          class="h-auto w-full object-contain object-center"
        />
      </div>
    </div>
  </section>

  <section class="w-full bg-gray-50 px-2 py-2 pb-4 sm:px-4 md:px-4">
