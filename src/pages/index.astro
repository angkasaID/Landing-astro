function formatRupiah(number: number) {
  if (typeof number !== 'number') return 'Rp 0';
  return 'Rp ' + number.toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.');
}
const footerButtonHoverClass = 'hover:bg-lime-700';
---

<BaseLayout title="AetherSub | Vendor Jersey Terpercaya">
  <section id="hero-section" class="relative min-h-screen overflow-hidden pb-4">
    <div id="parallax-image" class="parallax-bg z-0"></div>

    <div class="absolute inset-0 z-10 bg-gray-900/20"></div>

    <div
      class="relative z-20 flex h-full w-full flex-col justify-center text-left"
      style="min-height: 100vh"
    >
      <div class="p-4 pt-24 pb-4 sm:px-8 lg:pt-32 lg:pr-16 lg:pl-32">
        <h1
          class="font-judul mb-2 max-w-4xl text-5xl leading-tight font-semibold text-white text-shadow-sm sm:text-6xl lg:text-8xl"
        >
          We Are <br />
          <span class="font-judul2 block text-lime-500">Aethersub</span>

          <!-- Kredit kecil -->
          <span class="mt-0 block pr-1 text-left text-sm font-light text-white/70 italic">
            By. Angkasa Project
          </span>
        </h1>
      </div>
    </div>
  </section>
  <div class="absolute right-0 bottom-5 left-0 z-30 flex justify-center">
    <div
      data-aos="zoom-in"
      data-aos-delay="150"
      class="w-[90%] max-w-lg rounded-3xl border border-white/20 bg-white/10 px-8 py-5 shadow-2xl backdrop-blur-xl"
    >
      <p class="mb-4 text-center text-sm text-white/80">
        âœ¨ Baru! Dapatkan inspirasi desain terbaru langsung dari studio kami.
      </p>

      <a
        href="https://desain.aethersub.store"
        target="_blank"
        class="block w-full rounded-xl bg-lime-500 py-3 text-center font-bold text-gray-900 transition duration-300 hover:scale-105 hover:bg-lime-400"
      >
        Lihat Koleksi
      </a>
    </div>
  </div>

  <section
    id="full-screen-carousel"
    class="relative aspect-video w-full overflow-hidden bg-white md:h-[56.25vw] md:max-h-screen"
  >
    <div
      id="gallery-carousel"
      class="mt-1 flex h-full w-full snap-x snap-mandatory snap-always overflow-x-auto"
      style="scroll-behavior: smooth;"
    >
      <div
        class="carousel-item justify-cente relative flex h-full w-screen flex-shrink-0 items-center"
        data-slide-index="1"
      >
        <div
          class="bg-center-top absolute inset-0 bg-cover"
          style="background-image: url('/asset/images/slide1.png')"
        >
        </div>
      </div>

      <div
        class="carousel-item relative flex h-full w-screen flex-shrink-0 items-center justify-center"
        data-slide-index="2"
      >
        <div
          class="bg-center-top absolute inset-0 bg-cover"
          style="background-image: url('/asset/images/slide2.png')"
        >
        </div>
      </div>

      <div
        class="carousel-item relative flex h-full w-screen flex-shrink-0 items-center justify-center"
        data-slide-index="3"
      >
        <div
          class="bg-center-top absolute inset-0 bg-cover"
          style="background-image: url('/asset/images/slide3.png')"
        >
        </div>
      </div>

      <div
        class="carousel-item justify-cente relative flex h-full w-screen flex-shrink-0 items-center"
        data-slide-index="1-copy"
      >
        <div
          class="bg-center-top absolute inset-0 bg-cover"
          style="background-image: url('/asset/images/slide1.png')"
        >
        </div>
      </div>
    </div>
  </section>

  <section class="w-full bg-gray-50 px-2 py-2 pb-4 sm:px-4 md:px-4">
    <div class="flex w-full flex-row gap-2 sm:gap-4 md:h-screen md:gap-6">
      <div
        data-aos="fade-right"
        class="relative aspect-square w-1/2 overflow-hidden bg-gray-800 md:aspect-auto md:h-full"
      >
        <div
          class="absolute inset-0 bg-cover bg-center opacity-90 transition duration-500 hover:opacity-100"
          style="background-image: url('/asset/images/image-1.png')"
        >
        </div>
        <div
          class="absolute inset-0 z-10 flex h-full w-full items-center justify-center bg-gray-900/50 p-4 sm:p-6"
        >
          <h2 class="font-judul2 text-center text-xl text-white sm:text-3xl md:text-5xl">
            KUALITAS TERBAIK<br />
          </h2>
        </div>
      </div>
      <div
        data-aos="fade-left"
        class="relative aspect-square w-1/2 overflow-hidden bg-gray-700 md:aspect-auto md:h-full"
      >
        <div
          class="absolute inset-0 bg-cover bg-center opacity-90 transition duration-500 hover:opacity-100"
          style="background-image: url('/asset/images/image-2.png')"
        >
        </div>
        <div
          class="absolute inset-0 z-10 flex h-full w-full items-center justify-center bg-gray-900/50 p-4 sm:p-6"
        >
          <h3
            class="font-judul2 text-center text-xl leading-snug font-semibold text-white sm:text-3xl md:text-5xl"
          >
            BEBAS CUSTOM
          </h3>
        </div>
      </div>
    </div>
  </section>

  <main class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8" id="produk">
    <h2 class="mb-8 text-center text-3xl font-bold text-gray-900" data-aos="fade-up">
      Jersey Pilihan Kami
    </h2>

    <div class="grid grid-cols-2 gap-x-2 gap-y-4 md:grid-cols-4 md:gap-8">
      {
        products.map((product) => (
          <div
            data-aos="fade-up"
            data-aos-delay="100"
            class="group transform overflow-hidden rounded-xl bg-white shadow-2xl transition duration-500 hover:scale-[1.03] hover:shadow-lime-400/50"
          >
            <button
              class="open-product-modal relative flex h-56 w-full items-center justify-center overflow-hidden bg-gray-100 focus:outline-none"
              data-product-id={product.id}
              data-product-name={product.name}
              data-product-price={product.price}
              data-product-images={JSON.stringify(product.images)}
            >
              <div
                class="absolute inset-0 transition duration-500 group-hover:scale-110"
                style={`
                 background-image: url('${product.imageSrc}');
                 background-size: cover;
                 background-position: center;
             `}
              />

              <div class="bg-opacity-10 absolute inset-0 bg-black opacity-0 transition duration-300 group-hover:opacity-100" />

              {/* Menggunakan ternary operator jika Anda ingin badge ini hanya tampil jika product.isNew true */}
              <span class="absolute top-3 left-3 z-10 rounded-full bg-lime-500 px-3 py-1 text-xs font-semibold text-white opacity-90 shadow-lg">
                BARU
              </span>
            </button>

            <div class="p-5">
              <h3 class="truncate text-base font-semibold text-gray-900 md:text-xl">
                {product.name}
              </h3>

              <p class="mt-1 mb-2 text-xs font-medium tracking-wide text-gray-500">
                {product.category}
              </p>

              <span class="mb-4 block text-lg font-extrabold text-lime-600 md:text-2xl">
                {formatRupiah(product.price)}
              </span>

              <div class="flex flex-col items-center justify-between md:mt-2 md:flex-row">
                <button
                  class="open-product-modal focus:ring-opacity-50 w-full rounded-md bg-gray-900 px-4 py-2 text-sm font-medium text-white shadow-lg transition duration-200 ease-in-out hover:bg-lime-600 focus:ring-2 focus:ring-lime-500 focus:outline-none active:bg-lime-700"
                  data-product-id={product.id}
                  data-product-name={product.name}
                  data-product-price={product.price}
                  data-product-images={JSON.stringify(product.images)}
                >
                  <i class="fa-solid fa-cart-plus mr-2" />
                  Beli Sekarang
                </button>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    <div class="mt-12 text-center">
      <a
        href="/produk"
        class={`inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-lime-600 ${footerButtonHoverClass} transition duration-150`}
      >
        Tampilkan Semua Produk
      </a>
    </div>
  </main>

  <section id="keunggulan" class="bg-white py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 data-aos="fade-up" class="mb-12 text-center text-3xl font-bold text-gray-900">
        Mengapa Memilih AetherSub?
      </h2>
      <div class="grid grid-cols-2 gap-8 text-center md:grid-cols-4 md:gap-12">
        <div data-aos="zoom-in" data-aos-delay="100" class="flex flex-col items-center p-4">
          <i class="fa-solid fa-certificate mb-4 text-5xl text-lime-600"></i>
          <h3 class="mb-1 text-lg font-semibold text-gray-900">100% Kualitas Premium</h3>
          <p class="text-sm text-gray-600">Jersey dijamin menggunakan bahan dan detail terbaik.</p>
        </div>
        <div data-aos="zoom-in" data-aos-delay="100" class="flex flex-col items-center p-4">
          <i class="fa-solid fa-paintbrush mb-4 text-5xl text-lime-600"></i>
          <h3 class="mb-1 text-lg font-semibold text-gray-900">Kustom Nama Gratis</h3>
          <p class="text-sm text-gray-600">Sablon nama dan nomor punggung tanpa biaya tambahan.</p>
        </div>
        <div data-aos="zoom-in" data-aos-delay="100" class="flex flex-col items-center p-4">
          <i class="fa-solid fa-truck-fast mb-4 text-5xl text-lime-600"></i>
          <h3 class="mb-1 text-lg font-semibold text-gray-900">Pengiriman Cepat</h3>
          <p class="text-sm text-gray-600">
            Proses dan kirim pesanan Anda dengan mitra terpercaya.
          </p>
        </div>
        <div data-aos="zoom-in" data-aos-delay="100" class="flex flex-col items-center p-4">
          <i class="fa-solid fa-headset mb-4 text-5xl text-lime-600"></i>
          <h3 class="mb-1 text-lg font-semibold text-gray-900">Dukungan 24/7</h3>
          <p class="text-sm text-gray-600">
            Tim kami siap membantu setiap pertanyaan dan kendala Anda.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="testimonial" class="bg-gray-50 py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 data-aos="fade-up" class="mb-12 text-center text-3xl font-bold text-gray-900">
        Kata Mereka Tentang AetherSub
      </h2>
      <div
        id="testimonial-carousel"
        class="flex gap-x-6 overflow-x-auto px-4 sm:px-0 md:grid md:grid-cols-3 md:gap-8 md:overflow-visible"
      >
        <div
          data-aos="fade-up"
          data-aos-delay="150"
          class="testimonial-item flex snap-center flex-col items-center rounded-xl bg-white p-6 text-center shadow-lg md:w-full"
        >
          <img
            class="mb-4 h-20 w-20 rounded-full object-cover ring-4 ring-red-500"
            src="https://picsum.photos/seed/cust1/80/80"
            alt="Foto Profil Pelanggan 1"
          />
          <p class="mb-4 text-gray-700 italic">
            "Jersey sampai dengan cepat! Kualitas bahan dan sublimnya premium banget, melebihi
            ekspektasi. Custom yang mantap."
          </p>
          <div class="mt-auto">
            <p class="font-semibold text-gray-900">- Ngikvi Najib.</p>
            <div class="mt-1 flex justify-center text-sm text-yellow-500">
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
            </div>
          </div>
        </div>

        <div
          data-aos="fade-up"
          data-aos-delay="150"
          class="testimonial-item flex snap-center flex-col items-center rounded-xl bg-white p-6 text-center shadow-lg md:w-full"
        >
          <img
            class="mb-4 h-20 w-20 rounded-full object-cover ring-4 ring-red-500"
            src="https://picsum.photos/seed/cust2/80/80"
            alt="Foto Profil Pelanggan 2"
          />
          <p class="mb-4 text-gray-700 italic">
            "Admin sangat baik saat saya tanya tentang produk. Barangnya cocok, pas di badan. Terima
            kasih AetherSub!"
          </p>
          <div class="mt-auto">
            <p class="font-semibold text-gray-900">- Wawan.</p>
            <div class="mt-1 flex justify-center text-sm text-yellow-500">
              <i class="fa-solid fa-star"></i>

              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star-half-stroke"></i>
            </div>
          </div>
        </div>

        <div
          data-aos="fade-up"
          data-aos-delay="150"
          class="testimonial-item flex snap-center flex-col items-center rounded-xl bg-white p-6 text-center shadow-lg md:w-full"
        >
          <img
            class="mb-4 h-20 w-20 rounded-full object-cover ring-4 ring-red-500"
            src="https://picsum.photos/seed/cust3/80/80"
            alt="Foto Profil Pelanggan 
3"
          />
          <p class="mb-4 text-gray-700 italic">
            "Packnya rapi dan aman. Jersey nya enak dipakai untuk kerja. Puas banget!"
          </p>
          <div class="mt-auto">
            <p class="font-semibold text-gray-900">- Lukman Hakim.</p>
            <div class="mt-1 flex justify-center text-sm text-yellow-500">
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>

              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section
    data-aos="fade-up"
    id="konsultasi"
    class="bg-lime-600 px-4 py-16 text-center text-white sm:px-4 md:px-6"
  >
    <h2 class="mb-4 text-3xl font-bold sm:text-4xl">Siap Buat Jersey Tim Anda?</h2>
    <p class="mb-6 text-lg">Konsultasi gratis dengan tim desain kami sekarang</p>
    <a
      href="https://wa.me/6285171140818"
      class="rounded-lg bg-white px-8 py-3 font-semibold text-lime-600 shadow transition hover:shadow-lg"
    >
      Konsultasi Sekarang
    </a>
  </section>

  <div
    id="construction-modal"
    class="fixed inset-0 z-[100] flex hidden items-center justify-center bg-gray-900/80 backdrop-blur-sm transition-opacity duration-300"
  >
    <div
      class="relative w-full max-w-sm scale-100 transform rounded-xl bg-white p-8 opacity-100 shadow-2xl transition-all md:max-w-md md:p-10"
    >
      <button
        id="construction-close-btn"
        class="absolute top-3 right-3 text-gray-400 transition hover:text-gray-900 md:hidden"
        aria-label="Tutup notifikasi"
      >
        <i class="fa-solid fa-xmark fa-xl"></i>
      </button>

      <div class="text-center">
        <div
          class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-yellow-100"
        >
          <i class="fa-solid fa-screwdriver-wrench text-2xl text-yellow-600"></i>
        </div>

        <h2 class="mb-2 text-2xl font-bold text-gray-900">Hai There....</h2>

        <h2 class="mb-2 text-2xl font-bold text-lime-700">This site under Construction :(</h2>

